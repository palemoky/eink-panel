# ===== 基础配置 =====
REFRESH_INTERVAL=600
IS_SCREENSHOT_MODE=false

# 静默时间段 (24小时制，在此时间段内不刷新屏幕)
QUIET_START_HOUR=1
QUIET_END_HOUR=6

# 时区 (IANA 时区名称)
TIMEZONE=Asia/Shanghai

# ===== 壁纸模式 =====
# 启用壁纸模式后，将显示艺术壁纸而不是数据面板
WALLPAPER_MODE=false
# 壁纸名称（留空则随机选择）
# 可选: solar_system, starship, earth_rise, saturn_rings, galaxy, moon_landing, mars_landscape, nebula
WALLPAPER_NAME=

# E-Paper Driver Model (matches file name in official repo)
EPD_MODEL=epd7in5_V2
# Set to true to force using Mock driver (useful for local dev)
MOCK_EPD=false


# Quiet Hours (24h format, screen will sleep during this time)
QUIET_START_HOUR=1
QUIET_END_HOUR=6

# Personal Info (For Holiday Greetings)
USER_NAME=Palemoky
BIRTHDAY=11-22  # MM-DD
ANNIVERSARY=05-20  # MM-DD

# Weather (OpenWeatherMap)
OPENWEATHER_API_KEY=your_key_here
CITY_NAME=Beijing

# GitHub Stats
GITHUB_USERNAME=your_username
GITHUB_TOKEN=your_token

# VPS Info (64clouds)
VPS_API_KEY=your_key_here

# ===== TODO Data Sources =====
# Choose one: config, gist, notion, sheets
TODO_SOURCE=config

# GitHub Gist (if TODO_SOURCE=gist)
# Create a private gist with todo.md file
GIST_ID=

# Notion (if TODO_SOURCE=notion)
# Create integration at https://www.notion.so/my-integrations
NOTION_TOKEN=
NOTION_DATABASE_ID=

# Google Sheets (if TODO_SOURCE=sheets)
# Create service account and download credentials.json
GOOGLE_SHEETS_ID=
GOOGLE_CREDENTIALS_FILE=credentials.json
